  "api" : {
    "ping" : {
      "method" : "GET",
      "path" : "/ping"
    },
    "getDevices" : {
      "method" : "GET",
      "path" : "/devices"
    },
    "exposeDevice" : {
      "method" : "PUT",
      "path" : "/devices/:id"
    },
    "unexposeDevice" : {
      "method" : "DELETE",
      "path" : "/devices/:id"
    },
    "reset" : {
      "method" : "POST",
      "path" : "/reset"
    }
  }
